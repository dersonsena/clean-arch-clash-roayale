{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
    },
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
